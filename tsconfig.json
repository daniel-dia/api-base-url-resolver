{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "declaration": true,
        "strictNullChecks": false,
        "strict": false,
    },
    "exclude": [
        "node_modules",
        "build",
        "tests",
        "**/*.spec.ts"
    ]
}
{
    "name": "api-base-url-resolver",
    "version": "1.0.1",
    "description": "Infers a url based on a current url, for instance, allows a front end to resolve a back-end api base url depending on it's running environment. Its very useful when running a lot of environment stages and the front-end must match the back-end environment",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "author": "SoluCX",
    "license": "ISC",
    "files": [
        "build/**/*"
    ],
    "keywords": [
        "solucx"
    ],
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "lint": "tslint -p tsconfig.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "test:cov": "jest --coverage",
        "prepublishOnly": "npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "patch": "npm version patch"
    },
    "dependencies": {
        "jstat": "^1.9.5"
    },
    "devDependencies": {
        "@stryker-mutator/core": "^6.1.2",
        "@types/jest": "^25.2.3",
        "jest": "^26.6.3",
        "prettier": "^2.6.2",
        "ts-jest": "^26.5.6",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "reporters": [
            "default"
        ],
        "modulePaths": [
            "<rootDir>/src/"
        ],
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coveragePathIgnorePatterns": [
            "index.ts"
        ],
        "coverageDirectory": "coverage",
        "testEnvironment": "node"
    }
}
